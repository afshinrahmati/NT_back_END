{
    "name": "NT_back_END",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/afshinrahmati/NT_back_END.git",
    "author": "afshinrahmati <afshinrahmati93@gail.com>",
    "license": "MIT",
    "scripts": {
        "build": "npm run build:types && npm run build:js",
        "build:js": "babel src --out-dir dist --extensions \".ts\"",
        "build:types": "tsc --emitDeclarationOnly",
        "jest": "jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
        "start": "tsc && nodemon ./dist/index.js",
        "test": "npm run type-check && npm run jest",
        "type-check": "tsc --noEmit",
        "type-check-watch": "npm run type-check -- --watch",
        "dev": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts"
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "connect-redis": "^6.1.3",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-session": "^1.17.3",
        "ioredis": "^5.0.6",
        "mongoose": "^6.3.5",
        "morgan": "^1.10.0",
        "redis": "^4.1.0",
        "ts-node-dev": "^2.0.0"
    },
    "devDependencies": {
        "@types/connect-redis": "^0.0.18",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.4",
        "@types/ioredis": "^4.28.10",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.39",
        "@types/redis": "^4.0.11",
        "nodemon": "^2.0.16",
        "ts-node": "^10.8.1",
        "tslint": "^6.1.3",
        "typescript": "^4.7.3"
    }
}
